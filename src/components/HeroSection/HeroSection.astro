---
import { FavoriteRoadmaps } from './FavoriteRoadmaps';
import { AIAnnouncement } from "../AIAnnouncement";
import Icon from '../AstroIcon.astro';
import { NavigationDropdown } from '../NavigationDropdown';
---

<style>
.centered-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 15vh; /* Adjusted to cover full viewport height */
}

.loader {
  width: fit-content;
  font-weight: bold;
  font-family: monospace;
  white-space: pre;
  font-size: 30px;
  line-height: 1.2em;
  height: 1.2em;
  overflow: hidden;
  color: #66fcf1;
}

.loader:before {
  content: "Learn_Hub!\A⌰earn_Hub!\A⌰⟒arn_Hub!\A⌰⟒⏃rn_Hub!\A⌰⟒⏃⍀n_Hub!\A⌰⟒⏃⍀⋏_Hub!\A⌰⟒⏃⍀⋏_Hub!\A⌰⟒⏃⍀⋏_⊑ub!\A⌰⟒⏃⍀⋏_⊑⎍b!\A⌰⟒⏃⍀⋏_⊑⎍⏚!\A⌰⟒⏃⍀⋏_⊑⎍⏚!";
  white-space: pre;
  display: inline-block;
  animation: l39 1.5s infinite steps(11) alternate;
  color: white;
  font-size: 40px;
}

@keyframes l39 {
  100% {
    transform: translateY(-100%)
  }
}

#loading-text {
  position:absolute;
  font-size: 40px;
  top:31%;
  left: 52%;
  transform: translate(-50%, -50%);
}
</style>

<div style="background-image: url('./backc.jpg'); background-size: cover; background-position: center; filter: 10px">
  <div class="centered-container">
    <div id="loading-text" class="loader">
      <h1 class='transition-text mb-2 bg-gradient-to-b from-black to-blue-600 bg-clip-text text-2xl font-bold text-transparent sm:mb-4 sm:text-5xl'>
        Learn Hub
      </h1>
    </div>
  </div>

  <div class='min-h-auto relative min-h-[192px] border-b border-b-[#232f42] transition-all sm:min-h-[281px]'>
    <div class='container px-5 py-6 pb-14 text-left transition-opacity duration-300 sm:px-0 sm:py-20 sm:text-center' id='hero-text'>
  <!--
    <p class='px-4 pb-4 text-lg text-gray-700 sm:block'>
      <span class='font-medium text-slate-900'>Learn Hub</span> is a portal with roadmaps, guides and other educational content to help people in picking up a path and guide their learnings.
    </p>
    <p class='text-md block px-0 text-gray-400 sm:hidden'>
    </p>
  -->
  <div class="flex justify-center">
    <button data-command-menu class="mt-4 items-center rounded-md border" style="border-color: #66fcf1; padding: 0.875rem 1.5rem; font-size: 1.25rem; background-color: #000; color: #fff; cursor: pointer; display: flex; align-items: center; transition: background-color 0.3s, color 0.3s, border-color 0.3s;" onmouseover="this.style.backgroundColor='#66fcf1'; this.style.color='#000';" onmouseout="this.style.backgroundColor='#000'; this.style.color='#fff';">
      <Icon icon="search" class="h-4 w-4" />
      <span class="ml-4">I want to learn</span>
    </button>
  </div>
</div>
<FavoriteRoadmaps client:only='react' />
</div>
</div>